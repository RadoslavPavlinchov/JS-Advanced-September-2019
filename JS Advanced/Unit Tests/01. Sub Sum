function sum(array, startIndex, endIndex) {
    if (!Array.isArray(array)) {
        return NaN;
    }
    if (startIndex < 0) {
        startIndex = 0;
    }
    if (endIndex > array.length) {
        endIndex = array.length;
    }
    return array
    .slice(startIndex, endIndex + 1)
    .map(Number)
    .reduce((acc, curr) => acc + curr, 0);
}
console.log(sum([10, 'twenty', 30, 40], 0, 2));
